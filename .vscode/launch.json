    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch [Service]",
            "program": "${workspaceRoot}/eshop/src/app.ts",
            "preLaunchTask": "tsc",
            "outFiles": [
                "${workspaceRoot}/eshop/dist/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}